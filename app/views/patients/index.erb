<h2>All Patients</h2>
<div><%= link_to 'Create Patient', new_patient_path %></div> <br>

<ul>
  <% @patients.each do |patient| %>
    <li>
      <%= link_to patient.name, patient_path(patient) %>
      | Number of Appointments: <%= patient.appointments.count %>
    </li>
    <li>
      <%= "Name: #{patient.name} Number of Appointments: #{patient.appointments.count}" %>
    </li>
    <br>
  <% end %>
</ul>
